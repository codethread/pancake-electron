{
	"name": "pancake",
	"version": "0.1.4",
	"description": "A Pull Request Dashboard on your Desktop",
	"main": "./build/main.js",
	"scripts": {
		"clean": "git clean -dfx && yarn install",
		"dev": "FORCE_COLOR=1 run-p --print-label dev:electron dev:react",
		"gql": "graphql-codegen --config tooling/graphql/codegen.yml",
		"fix": "yarn format && yarn lint --fix",
		"machine": "xstate typegen \"client/machines/**/machine.*\"",
		"storybook": "start-storybook -p 6006 -s public -c tooling/storybook",
		"format:check:old": "prettier --check --ignore-path .gitignore .",
		"format:check": "jest --config=jest.prettier.js",
		"format": "prettier --write --ignore-path .gitignore . '!.yarn'",
		"lint": "eslint --cache .",
		"test": "jest",
		"types": "tsc --noEmit",
		"e2e": "playwright test",
		"e2e:approve": "yarn e2e --update-snapshots",
		"docker-e2e": "docker build . -f Dockerfile -t pancake",
		"build": "FORCE_COLOR=1 run-p --print-label build:electron build:react",
		"start": "electron .",
		"build:electron": "webpack --config tooling/webpack/electron.webpack.js --mode production",
		"build:react": "webpack --config tooling/webpack/react.webpack.js --mode production",
		"dev:electron": "wait-on http-get://localhost:4000/ && cross-env NODE_ENV=development webpack --config tooling/webpack/electron.webpack.js --mode development && yarn start",
		"dev:react": "cross-env NODE_ENV=development webpack-dev-server --config tooling/webpack/react.webpack.js --mode development",
		"checks": "run-s --print-name format:check lint types test build e2e",
		"prerelease": "yarn build",
		"release": "API_KEY_ID=$POMO_API_KEY_ID electron-builder --mac",
		"postrelease": "rm -rf dist",
		"postinstall": "electron-builder install-app-deps"
	},
	"keywords": [],
	"author": "Adam Hall <adamhalldesigns@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@apollo/client": "^3.6.2",
		"@heroicons/react": "^1.0.6",
		"@xstate/inspect": "^0.7.0",
		"@xstate/react": "^3.0.0",
		"classnames": "^2.3.1",
		"dotenv": "10.0.0",
		"electron-log": "4.3.2",
		"electron-store": "8.0.0",
		"graphql": "^16.5.0",
		"graphql-tag": "^2.12.6",
		"lodash.merge": "^4.6.2",
		"react": "16.14.0",
		"react-dom": "16.14.0",
		"react-hook-form": "^7.34.2",
		"remeda": "^1.0.1",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.7.4",
		"xstate": "^4.32.1"
	},
	"devDependencies": {
		"@babel/core": "^7.17.9",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
		"@babel/plugin-proposal-optional-chaining": "^7.16.7",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@graphql-codegen/cli": "2.6.2",
		"@graphql-codegen/introspection": "2.1.1",
		"@graphql-codegen/typescript": "^2.4.11",
		"@graphql-codegen/typescript-operations": "2.4.0",
		"@graphql-codegen/typescript-react-apollo": "3.2.14",
		"@graphql-codegen/typescript-resolvers": "^2.6.4",
		"@playwright/test": "^1.20.2",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
		"@storybook/addon-actions": "6.4.22",
		"@storybook/addon-essentials": "6.4.22",
		"@storybook/addon-links": "6.4.22",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/addons": "6.4.22",
		"@storybook/react": "6.4.22",
		"@storybook/theming": "6.4.22",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/react": "12.1.4",
		"@testing-library/react-hooks": "7.0.2",
		"@testing-library/user-event": "13.5.0",
		"@types/electron-devtools-installer": "2.2.0",
		"@types/lodash.merge": "4.6.6",
		"@types/node": "16",
		"@types/react": "17.0.2",
		"@types/react-dom": "17.0.1",
		"@typescript-eslint/eslint-plugin": "5.12.0",
		"@typescript-eslint/parser": "5.12.0",
		"@xstate/cli": "^0.3.0",
		"autoprefixer": "^10.4.7",
		"babel-loader": "^8.2.4",
		"copy-webpack-plugin": "6",
		"cross-env": "7.0.3",
		"css-loader": "4.3.0",
		"electron": "16.0.10",
		"electron-builder": "^23.0.3",
		"electron-builder-notarize": "^1.4.0",
		"electron-devtools-installer": "3.1.1",
		"electron-updater": "4.5.2",
		"eslint": "7",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-airbnb-typescript": "16.1.0",
		"eslint-config-prettier": "8.1.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jest-dom": "3.6.5",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-storybook": "0.5.11",
		"eslint-plugin-testing-library": "^5.2.1",
		"html-webpack-plugin": "4.5.2",
		"jest": "^27.5.1",
		"jest-diff": "26.6.2",
		"jest-runner-prettier": "^1.0.0",
		"npm-run-all": "4.1.5",
		"playwright": "^1.20.2",
		"postcss": "^8.4.14",
		"postcss-loader": "4.3.0",
		"prettier": "2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"react-is": "^18.0.0",
		"react-refresh": "^0.14.0",
		"style-loader": "2.0.0",
		"testing-library-selector": "^0.2.1",
		"ts-jest": "^27.1.4",
		"wait-on": "5.2.1",
		"webpack": "4.46.0",
		"webpack-cli": "3.3.12",
		"webpack-dev-server": "3.11.2",
		"ws": "8.5.0"
	},
	"build": {
		"appId": "com.electron.pancake",
		"productName": "Pancake",
		"afterSign": "electron-builder-notarize",
		"linux": {
			"category": "Utility"
		},
		"mac": {
			"category": "public.app-category.developer-tools",
			"entitlements": "./publishingTools/entitlements.mac.plist",
			"entitlementsInherit": "./publishingTools/entitlements.mac.plist",
			"hardenedRuntime": true,
			"target": {
				"target": "default",
				"arch": [
					"x64",
					"arm64"
				]
			}
		},
		"directories": {
			"output": "dist",
			"buildResources": "publishingTools"
		},
		"files": [
			"package.json",
			"publishingTools/icon.*",
			"build/**"
		]
	},
	"volta": {
		"node": "16.9.1",
		"yarn": "1.22.18"
	},
	"packageManager": "yarn@3.2.0"
}
