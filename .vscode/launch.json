	"version": "0.2.0",
	"configurations": [
		{
			"args": ["--runInBand", "--verbose", "${file}"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "openOnSessionStart",
			"name": "Jest Tests",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			// "protocol": "inspector",
			"env": { "CI": "true" }
		},
		{
			"name": "Attach",
			"request": "attach",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		}
	]
}
