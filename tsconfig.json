{
  "compilerOptions": {
    // setup
    "lib": ["dom", "DOM.Iterable","es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "es2019",
    "jsx": "react",

    // rules
    "strict": true ,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,

    // links
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@client/*": [
        "client/*"
      ],
      "@test/*": [
        "client/testHelpers/*"
      ]
    },
  },
  "include": [
    "./.eslintrc.js",
    "./jest.config.js",
    "tooling",
    "client",
    "electron",
    "shared",
    "e2e"
  ],
  "exclude": ["node_modules"]
}
