{
  "compilerOptions": {
    "strict": true ,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "jsx": "react"
  }
}
